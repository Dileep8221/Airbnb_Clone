PORT=4000
CLIENT_ORIGIN=http://localhost:5173

# MongoDB
# Example (MongoDB Atlas connection string):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.abcd123.mongodb.net/airbnb-clone?retryWrites=true&w=majority
MONGO_URI=your_mongodb_connection_string_here

# Auth (later)
JWT_SECRET=change_me_super_secret_key
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Payments (later)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

NODE_ENV=development
# CORS / security
CORS_ORIGIN=http://localhost:5173

# Rate limiting (optional overrides)
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes
RATE_LIMIT_MAX=100            # 100 requests per IP per window
AUTH_RATE_LIMIT_MAX=10        # 10 auth requests per IP per window
AUTH_RATE_LIMIT_WINDOW_MS=900000
